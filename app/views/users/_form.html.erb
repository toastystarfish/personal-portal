<%= form_for(user, html: {class: 'stacked-form'}) do |f| %>
  <%= hidden_field_tag :token, token %>

  <section>
    <div class="stacked-form-field">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, placeholder: "Enter First Name", class: "full-width" %>
    </div>
    <div class="stacked-form-field">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, placeholder: "Enter Last Name", class: "full-width" %>
    </div>
    <div class="stacked-form-field">
      <%= f.label :email, data: {tooltip: "text tooltip"} %>
      <%= f.email_field :email,  placeholder: "Enter Email", class: "full-width" %>
    </div>
  </section>
  <section>
    <div class="stacked-form-field">
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "Enter Password", class: "full-width" %>
    </div>
    <div class="stacked-form-field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: "full-width" %>
    </div>
  </section>

  <% if user.errors.any? %>
    <div class="top-space-16">
      <ul class="no-list-style anim-slide-fade-up">
        <% user.errors.full_messages.each do |message| %>
          <li class="font-small text-error"><%= fa_icon('exclamation-circle', text: message) %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="text-right top-space-24">
    <%= link_to "Back to users", users_path %>
    <%= f.button "Save", class: "btn-primary left-space-16" %>
  </div>
<% end %>
