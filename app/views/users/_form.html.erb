<%= form_for(user, html: {class: 'inline-form'}) do |f| %>
  <%= f.hidden_field :first_name %>
  <%= f.hidden_field :last_name %>
  <%= f.hidden_field :email %>
  <%= hidden_field_tag :token, token %>

  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %>
    <%= content_tag :span, user.first_name, contenteditable: true,
        placeholder: "Enter First Name", data: {input_id: 'user_first_name'} %>
  </div>
  <div class="field">
    <%= f.label :last_name %>
    <%= content_tag :span, user.last_name, contenteditable: true,
        placeholder: "Enter Last Name", data: {input_id: 'user_last_name'} %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= content_tag :span, user.email, contenteditable: true,
        placeholder: "Enter Email", data: {input_id: 'user_email'} %>
  </div><div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "Enter Password" %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, placeholder: "Confirm Password" %>
  </div>

  <div class="inline-form-changed btn-group">
    <%= link_to users_path, class: 'list tip' do %>
      <span>Back to index</span>
    <% end %>
    <%= f.button class: 'save tip' do %>
      <span>Save</span>
    <% end %>
    <%= link_to user, class: 'discard tip' do %>
      <span>Discard</span>
    <% end %>
  </div>
<% end %>
